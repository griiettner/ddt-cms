# Server Configuration
PORT=3030
NODE_ENV=development

# Database Configuration
# Database type: 'sqlite' (default) or 'aurora' (future)
DB_TYPE=sqlite
# Unified database path (replaces REGISTRY_DB_PATH and RELEASES_DB_DIR)
DB_PATH=data/app.db

# Legacy database paths (deprecated - kept for migration reference)
# REGISTRY_DB_PATH=data/registry.db
# RELEASES_DB_DIR=data/releases

# Aurora Configuration (for future AWS migration)
# AURORA_HOST=
# AURORA_PORT=3306
# AURORA_DATABASE=
# AURORA_USERNAME=
# AURORA_PASSWORD=
# AURORA_SSL=true

# Authentication (for POC)
# Mock user EID and Name
MOCK_USER_EID=EEE000
MOCK_USER_NAME="Test User"

# Security
# CORS origin (use * for POC, or specific URLs for production)
CORS_ORIGIN=*
