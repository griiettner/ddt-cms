{
  "name": "cms-ddt",
  "version": "0.1.0",
  "description": "CMS for Data-Driven Testing - Capital One POC",
  "main": "server/index.js",
  "scripts": {
    "dev": "npm run build:css && npm-run-all --parallel dev:server dev:browser-sync",
    "dev:server": "nodemon server/index.js",
    "dev:browser-sync": "browser-sync start --config bs-config.js",
    "start": "npm run build:css && node server/index.js",
    "db:init": "node server/db/migrations.js",
    "db:seed": "node server/db/seed.js",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/styles.css --minify",
    "watch:css": "tailwindcss -i ./public/css/input.css -o ./public/css/styles.css --watch"
  },
  "keywords": [
    "cms",
    "testing",
    "ddt",
    "playwright"
  ],
  "author": "Capital One Team",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "express": "^4.18.2",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "handsontable": "^16.2.0",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.4.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.17",
    "browser-sync": "^3.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
