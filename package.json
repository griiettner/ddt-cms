{
  "name": "uat-cms",
  "version": "2.0.0",
  "description": "CMS for Data-Driven Testing (DDT) - Capital One UAT",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --ext js --watch server server/index.js",
    "client:dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server/index.js",
    "docker:up": "docker compose up -d",
    "docker:build": "docker compose up --build -d",
    "docker:down": "docker compose down",
    "docker:restart": "docker compose restart",
    "docker:stop": "docker compose stop",
    "docker:logs": "docker compose logs -f",
    "docker:sh": "docker compose exec app sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "cms",
    "ddt",
    "testing",
    "playwright",
    "sqlite",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^9.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.0"
  }
}
